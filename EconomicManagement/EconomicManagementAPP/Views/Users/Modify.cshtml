@model Users

@{
    ViewData["Title"] = "Modify Users";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<br />
<br />
<div class="center-div">
    <div class="card text-dark bg-light mb-3 cardWidth ">
        <div class="card-header"><h1>Modify User: @Model.Email </h1></div>
        <div class="card-body">

            <form asp-action="Modify">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <div class="mb-3">
                    <label asp-for="StandarEmail" class="form-label"></label>
                    <input type="text" asp-for="StandarEmail" class="form-control" />
                    <span asp-validation-for="StandarEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div style="text-align: center">
                    <button type="submit" class="btn btn-primary">Modify</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
