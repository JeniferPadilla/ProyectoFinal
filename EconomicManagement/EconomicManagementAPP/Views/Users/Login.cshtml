@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<br />
<br />
<div class="center-div">
    <div class="card text-dark bg-light mb-3 cardHome">
        <div class="card-header" style="text-align: center; color: green;"><h1>LOGIN</h1></div>
        <div class="card-body">

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div style="text-align: center">
                    <button class="btn-primary btn">Login</button>
                    <a class="btn btn-success" asp-action="Create">Register</a>
                </div>

            </form>

        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
