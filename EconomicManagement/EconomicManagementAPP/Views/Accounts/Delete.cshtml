@model Accounts

@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<div class="center-div">
    <div class="card text-white bg-danger mb-3 delete" >
        <div class="card-header">
            <h3 class="mb-3">¿Are you sure you want to delete the account? @Model.Name? </h3>
        </div>
        <div class="card-bodyD">


            <form asp-action="DeleteAccount">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AccountTypeId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>

        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
