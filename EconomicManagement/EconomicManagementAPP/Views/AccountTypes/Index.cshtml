@model IEnumerable<AccountTypes>

@{
    ViewData["Title"] = "Account Types";
}

<h1>Account Types List</h1>

<a asp-action="Create" class="btn mb-3"> <img src="../../img/add.png" width="50" height="50"/></a>

<div class="containerTables">
<table class="table table-hover  table-striped list-table" >
    <thead class="table-dark">
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var accountTypes in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@accountTypes.Id" class="ids" />
                    <a class="btn " asp-action="Modify" asp-route-id="@accountTypes.Id"> <img src="../../img/edit.png" width="30" height="30"/></a>
                    <a class="btn " asp-action="Delete" asp-route-id="@accountTypes.Id"><img src="../../img/delete.png" width="30" height="30"/></a>
                </td>
                <td>
                    @accountTypes.Name
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-controller="Accounts" asp-action="Create" asp-route-id="@accountTypes.Id">New account</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>